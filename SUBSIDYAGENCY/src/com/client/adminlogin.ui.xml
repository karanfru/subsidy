<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m='urn:import:gwt.material.design.client.ui'
	xmlns:ma="urn:import:gwt.material.design.addins.client">
	<ui:style>
	.important {
		font-weight: bold;
	}
	.panel{
 background:url("https://static1.bigstockphoto.com/5/7/1/large2/175800463.jpg");
 background-size: 100%;
 padding: 0px !important;
 padding-top: 40% !important;
 }
 .fieldPanel{
 background: white;
 padding: 6%;
 }
 .rowAction{
 margin-top: 20px;
 }
 .login_demo{
 padding: 5%;
 }
 body {
		background: #ffe082;
	}
	</ui:style>
	
	
	<m:MaterialRow backgroundColor="AMBER_LIGHTEN_3" addStyleNames="{style.login_demo}">
 <m:MaterialColumn grid="s12 m8 l6" offset="l4" >
 <m:MaterialPanel shadow="1" addStyleNames="{style.panel}">
<m:MaterialPanel addStyleNames="{style.fieldPanel}">
 <m:MaterialTextBox label="Username" ui:field="a1"/>
 <m:MaterialTextBox type="PASSWORD" label="Password"  ui:field="a2" />
 <m:MaterialButton ui:field="q1" waves="LIGHT" text="Log In" width="100%" backgroundColor="DEEP_ORANGE"/>
  <m:MaterialRow addStyleNames="{style.rowAction}">
 <m:MaterialColumn grid="s12 m12 l6">
 <m:MaterialCheckBox text="Keep me logged in"/>
 </m:MaterialColumn>
 </m:MaterialRow>
 </m:MaterialPanel>
 </m:MaterialPanel>
 </m:MaterialColumn>
 </m:MaterialRow>
	
	</ui:UiBinder>